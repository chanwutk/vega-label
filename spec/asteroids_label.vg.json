{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 800,
  "height": 500,
  "padding": 5,

  "data": [
    {
      "name": "asteroids",
      "url": "data/gaia_asteroids_pos_name.json",
      "transform": [
        {
          "type": "filter",
          "expr":
            "datum['denomination'] != null && datum['ra'] != null && datum['dec'] != null"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": { "data": "asteroids", "field": "ra" },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": { "data": "asteroids", "field": "dec" },
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "ra"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "dec"
    }
  ],

  "marks": [
    {
      "name": "base_mark",
      "type": "symbol",
      "from": { "data": "asteroids" },
      "encode": {
        "update": {
          "x": { "scale": "x", "field": "ra" },
          "y": { "scale": "y", "field": "dec" },
          "size": { "value": 100 },
          "shape": { "value": "circle" },
          "strokeWidth": { "value": 1 },
          "opacity": { "value": 0.1 },
          "stroke": { "value": "#4682b4" },
          "fill": { "value": "transparent" }
        }
      }
    },
    {
      "name": "label",
      "type": "text",
      "from": { "data": "asteroids" },
      "encode": {
        "enter": {
          "x": { "scale": "x", "field": "ra" },
          "y": { "scale": "y", "field": "dec" },
          "fill": { "value": "#000" },
          "text": { "field": "denomination" }
        }
      },
      "transform": [
        {
          "type": "label",
          "size": [800, 500],
          "offsets": [2, 3],
          "marks": ["base_mark"],
          "fill": "#000",
          "sort": { "field": "ra" }
        }
      ]
    },
    {
      "type": "rule",
      "from": { "data": "label" },
      "encode": {
        "enter": {
          "x": { "field": "anchors.x" },
          "y": { "field": "anchors.y" },
          "x2": { "field": "anchors.x2" },
          "y2": { "field": "anchors.y2" },
          "stroke": { "field": "fill" },
          "strokeWidth": { "value": 1 }
        }
      }
    }
  ]
}
