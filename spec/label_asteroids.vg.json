{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 800,
  "height": 500,
  "padding": 10,

  "signals": [
    {
      "name": "count",
      "value": 100
    }
  ],

  "data": [
    {
      "name": "asteroids",
      "url": "data/gaia_asteroids_pos_name.json",
      "transform": [
        {
          "type": "filter",
          "expr": "datum['denomination'] != null && datum['ra'] != null && datum['dec'] != null"
        }
      ]
    },
    {
      "name": "contours",
      "source": "asteroids",
      "transform": [
        {
          "type": "contour",
          "x": { "expr": "scale('x', datum.ra)" },
          "y": { "expr": "scale('y', datum.dec)" },
          "size": [{ "signal": "width" }, { "signal": "height" }],
          "count": { "signal": "count" }
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": false,
      "zero": true,
      "domain": { "data": "asteroids", "field": "ra" },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": { "data": "asteroids", "field": "dec" },
      "range": "height"
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": [0, 1],
      "range": { "scheme": "plasma" }
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": true,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Radius (degrees)",
      "offset": 20,
      "tickCount": 6,
      "tickExtra": true
    },
    {
      "scale": "y",
      "grid": true,
      "domain": true,
      "orient": "left",
      "titlePadding": 5,
      "title": "Declination (degrees)",
      "offset": 20
    }
  ],

  "marks": [
    {
      "name": "base_mark",
      "type": "symbol",
      "from": { "data": "asteroids" },
      "encode": {
        "update": {
          "x": { "scale": "x", "field": "ra" },
          "y": { "scale": "y", "field": "dec" },
          "size": { "value": 30 },
          "shape": { "value": "circle" },
          "opacity": { "value": 0.5 },
          "_fill": { "scale": "color", "field": "density" },
          "fill": { "value": "#000" }
        }
      }
    },
    {
      "name": "label",
      "type": "text",
      "from": { "data": "base_mark" },
      "encode": {
        "enter": {
          "x": { "field": "x" },
          "y": { "field": "y" },
          "fill": { "value": "#000" },
          "text": { "field": "datum.denomination" }
        }
      },
      "transform": [
        {
          "type": "label",
          "offsets": [2],
          "sort": { "field": "datum.ra" }
        }
      ]
    },
    {
      "type": "rule",
      "from": { "data": "label" },
      "encode": {
        "enter": {
          "x": { "field": "datum.x" },
          "y": { "field": "datum.y" },
          "x2": { "field": "anchors.x" },
          "y2": { "field": "anchors.y" },
          "stroke": { "field": "fill" },
          "strokeWidth": { "value": 1 }
        }
      }
    }
  ]
}
